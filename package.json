{
  "name": "storemybottle-mvp",
  "version": "1.0.0",
  "description": "Digital bottle management system for bars and restaurants",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "npm run install:backend && npm run build:backend",
    "start": "echo 'Please deploy from /backend directory' && exit 1",
    "setup": "chmod +x scripts/deploy-setup.sh && ./scripts/deploy-setup.sh",
    "install:all": "npm run install:backend && npm run install:customer && npm run install:bartender && npm run install:admin",
    "install:backend": "cd backend && npm install",
    "install:customer": "cd frontend-customer && npm install",
    "install:bartender": "cd frontend-bartender && npm install",
    "install:admin": "cd frontend-admin && npm install",
    "build:all": "npm run build:backend && npm run build:customer && npm run build:bartender && npm run build:admin",
    "build:backend": "cd backend && npm run build",
    "build:customer": "cd frontend-customer && npm run build",
    "build:bartender": "cd frontend-bartender && npm run build",
    "build:admin": "cd frontend-admin && npm run build",
    "dev:backend": "cd backend && npm run dev",
    "dev:customer": "cd frontend-customer && npm run dev",
    "dev:bartender": "cd frontend-bartender && npm run dev",
    "dev:admin": "cd frontend-admin && npm run dev",
    "migrate:prod": "cd database && node run-migrations-production.js",
    "seed:prod": "cd backend && node init-sample-data-production.js"
  },
  "keywords": [
    "hospitality",
    "bar",
    "restaurant",
    "bottle-management",
    "qr-code",
    "mvp"
  ],
  "author": "Your Name",
  "license": "UNLICENSED",
  "dependencies": {
    "@clerk/express": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "pg": "^8.17.2",
    "qrcode": "^1.5.4",
    "uuid": "^10.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "@types/pg": "^8.16.0",
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}